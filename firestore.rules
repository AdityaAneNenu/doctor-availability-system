rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is hospital admin
    function isHospitalAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'hospital_admin';
    }
    
    // Profiles collection
    match /profiles/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);
      
      // Users can create their own profile during signup
      allow create: if isOwner(userId);
      
      // Users can update their own profile
      allow update: if isOwner(userId);
      
      // No one can delete profiles
      allow delete: if false;
    }
    
    // Hospitals collection
    match /hospitals/{hospitalId} {
      // Anyone authenticated can read hospital data
      allow read: if isAuthenticated();
      
      // Only the admin who created it can write
      allow create: if isAuthenticated() && 
                      request.resource.data.admin_id == request.auth.uid;
      
      // Only the hospital admin can update their hospital
      allow update: if isAuthenticated() && 
                      resource.data.admin_id == request.auth.uid;
      
      // Only the hospital admin can delete their hospital
      allow delete: if isAuthenticated() && 
                      resource.data.admin_id == request.auth.uid;
    }
    
    // Availability collection
    match /availability/{availabilityId} {
      // Anyone authenticated can read availability data
      allow read: if isAuthenticated();
      
      // Only hospital admins can create/update/delete availability
      allow write: if isHospitalAdmin();
    }
    
    // Weather data collection
    match /weather_data/{weatherId} {
      // Anyone authenticated can read weather data
      allow read: if isAuthenticated();
      
      // Allow anyone to write (for API routes)
      // In production, use Firebase Admin SDK with service account
      allow write: if true;
    }
    
    // Doctor requirements collection
    match /doctor_requirements/{requirementId} {
      // Anyone authenticated can read doctor requirements
      allow read: if isAuthenticated();
      
      // Allow anyone to write (for API routes)
      // In production, use Firebase Admin SDK with service account
      allow write: if true;
    }
    
    // Admission data collection (for ML prediction)
    match /admission_data/{dataId} {
      // Anyone authenticated can read admission data
      allow read: if isAuthenticated();
      
      // Anyone authenticated can write admission data
      // This allows the API to collect daily admission counts
      allow write: if isAuthenticated();
    }
  }
}
