rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Avatars storage
    match /avatars/{userId}/{allPaths=**} {
      // Anyone can read avatars (public read)
      allow read: if true;
      
      // Only the user can upload/update/delete their own avatar
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Hospital documents (if needed in future)
    match /hospital_documents/{hospitalId}/{allPaths=**} {
      // Only authenticated users can read
      allow read: if request.auth != null;
      
      // Only the hospital admin can write
      allow write: if request.auth != null && 
                     firestore.get(/databases/(default)/documents/hospitals/$(hospitalId)).data.admin_id == request.auth.uid;
    }
  }
}
